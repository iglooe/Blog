<%- include('partials/header') %>
<div class="container">
  <h1>Compose</h1>
  <form action="/compose" method="post">
    <div class="form-group">
      <label>Title</label>
      <input class="form-control" type="text" name="postTitle" />
      <label>Post</label>
      <textarea
        class="form-control"
        rows="5"
        cols="30"
        name="postBody"
      ></textarea>
      <br />
      <button class="btn btn-primary" type="submit" name="button">
        Publish
      </button>
    </div>
  </form>
</div>

